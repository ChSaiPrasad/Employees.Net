@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Home Page";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top"  src="~/images/noimage.jpg" alt="No image" asp-append-version="true"/>
            @* asp-append-version tag helper provide cache busting behaviour for static image files *@

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a> @* Tag helper *@
                @* <a href="/home/details/@employee.Id" class="btn btn-primary">View</a> *@
                <a href="#" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
